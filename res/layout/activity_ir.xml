            android:layout_alignBottom="@+id/button11"
            android:layout_alignTop="@+id/button11" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/seven"
            android:id="@+id/button13"
            android:onClick="on7Click"
            android:layout_toLeftOf="@+id/button14"
            android:textSize="29dp"
            android:layout_above="@+id/button16"
            android:layout_alignTop="@+id/button14" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eight"
            android:id="@+id/button14"
            android:onClick="on8Click"
            android:textSize="29dp"
            android:layout_alignTop="@+id/button15"
            android:layout_toRightOf="@+id/button10"
            android:layout_alignBottom="@+id/button15" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nine"
            android:id="@+id/button15"
            android:onClick="on9Click"
            android:textSize="29dp"
            android:layout_toRightOf="@+id/button14"
            android:layout_alignTop="@+id/button18"
