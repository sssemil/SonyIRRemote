            android:text="@string/right" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button21"
            android:onClick="onLeftClick"
            android:textSize="15dp"
            android:layout_below="@+id/button17"
            android:layout_toRightOf="@+id/button12"
            android:text="@string/left"
            android:layout_alignBottom="@+id/button19" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mute"
            android:id="@+id/button22"
            android:onClick="onMuteClick"
            android:layout_above="@+id/button21"
            android:layout_toRightOf="@+id/button9"
            android:layout_toLeftOf="@+id/button17"
            android:layout_alignTop="@+id/button3"
            android:textSize="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button23"
            android:onClick="onInputClick"
            android:text="@string/input"
            android:layout_above="@+id/button20"
            android:layout_toRightOf="@+id/button17"
            android:layout_alignTop="@+id/button22"
            android:layout_toLeftOf="@+id/button26"
            android:textSize="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:id="@+id/button24"
            android:onClick="onHomeClick"
            android:layout_above="@+id/button16"
            android:layout_alignLeft="@+id/button20"
            android:layout_alignStart="@+id/button20"
            android:layout_alignRight="@+id/button20"
            android:layout_alignEnd="@+id/button20"
            android:textSize="14dp"
            android:layout_below="@+id/button6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView"
            android:gravity="center|top"
            android:text="@string/prog"
            android:layout_alignLeft="@+id/button4"
            android:layout_alignStart="@+id/button4"
            android:layout_below="@+id/button4"
            android:layout_toLeftOf="@+id/button6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/vol"
            android:id="@+id/textView2"
            android:gravity="center|top"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/button6"
            android:layout_alignLeft="@+id/button6"
            android:layout_alignStart="@+id/button6" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tstt"
            android:id="@+id/button25"
            android:onClick="onTsttClick"
            android:layout_toRightOf="@+id/button15"
            android:layout_toLeftOf="@+id/button18"
            android:layout_alignTop="@+id/button24"
            android:layout_above="@+id/button16" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/returnbtn"
            android:id="@+id/button26"
            android:onClick="onReturnClick"
            android:layout_toLeftOf="@+id/button3"
            android:layout_alignTop="@+id/button23"
            android:layout_toRightOf="@+id/button20"
            android:textSize="15dp"
            android:layout_alignBottom="@+id/button23" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/options"
            android:id="@+id/button27"
            android:textSize="15dp"
            android:onClick="onOptionsClick"
            android:layout_below="@+id/button23"
            android:layout_toRightOf="@+id/button20"
            android:layout_toLeftOf="@+id/button3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guide"
            android:id="@+id/button28"
            android:onClick="onGuideClick"
            android:textSize="15dp"
            android:layout_alignLeft="@+id/button27"
            android:layout_alignStart="@+id/button27"
            android:layout_toLeftOf="@+id/button4"
            android:layout_alignBottom="@+id/button24"
            android:layout_alignTop="@+id/button24" />

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/button"
        android:longClickable="false"
        android:onClick="onPowerClick"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="@string/power_btn"
        android:textSize="25dp" />

</RelativeLayout>