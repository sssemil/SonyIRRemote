<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:id="@+id/spinner"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_def"
        android:text="@string/Write_signal"
        android:id="@+id/button2"
        android:onClick="onWrtClick"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentBottom="true" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/relativeLayout"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/spinner">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mini_button_key_plus"
            android:id="@+id/button3"
            android:onClick="onChanelPlClick"
            android:layout_alignTop="@+id/button5"
            android:layout_toLeftOf="@+id/button5" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mini_button_key_minus"
            android:id="@+id/button4"
            android:onClick="onChanelMnSonClick"
            android:layout_below="@+id/button3"
            android:layout_alignLeft="@+id/button3"
            android:layout_alignStart="@+id/button3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mini_button_key_plus"
            android:id="@+id/button5"
            android:onClick="onVolumePlClick"
            android:layout_above="@+id/button20"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mini_button_key_minus"
            android:id="@+id/button6"
            android:onClick="onVolumeMnClick"
            android:layout_below="@+id/button5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/one"
            android:id="@+id/button7"
            android:onClick="on1Click"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="29dp"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/button10" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/two"
            android:id="@+id/button8"
            android:onClick="on2Click"
            android:layout_toRightOf="@+id/button7"
            android:textSize="29dp"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/button10" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tree"
            android:id="@+id/button9"
            android:onClick="on3Click"
            android:layout_alignLeft="@+id/button12"
            android:layout_alignStart="@+id/button12"
            android:textSize="29dp"
            android:layout_above="@+id/button12"
            android:layout_alignParentTop="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/four"
            android:id="@+id/button10"
            android:onClick="on4Click"
            android:textSize="29dp"
            android:layout_alignBottom="@+id/button21"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button22" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/five"
            android:id="@+id/button11"
            android:onClick="on5Click"
            android:textSize="29dp"
            android:layout_toRightOf="@+id/button10"
