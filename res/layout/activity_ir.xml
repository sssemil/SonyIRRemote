            android:id="@+id/button28"
            android:onClick="onGuideClick"
            android:layout_toLeftOf="@+id/textView"
            android:layout_toRightOf="@+id/button24"
            android:layout_below="@+id/button20"
            android:layout_above="@+id/button16" />

