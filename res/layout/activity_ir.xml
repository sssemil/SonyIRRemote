<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:id="@+id/spinner"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button"
        android:layout_alignBottom="@+id/button" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/spinner">


        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/Write_signal"
            android:id="@+id/button2"
            android:onClick="onWrtClick"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:textSize="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:onClick="onChanelPlClick"
            android:layout_alignTop="@+id/button5"
            android:layout_toLeftOf="@+id/button5"
            android:text="@string/plus"
            android:layout_above="@+id/button6"
            android:textSize="25dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:onClick="onChanelMnClick"
            android:layout_below="@+id/button3"
            android:layout_alignLeft="@+id/button3"
            android:layout_alignStart="@+id/button3"
            android:text="@string/minus"
            android:singleLine="false" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:onClick="onVolumePlClick"
            android:layout_above="@+id/button20"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="@string/plus"
            android:textSize="25dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            android:onClick="onVolumeMnClick"
            android:layout_below="@+id/button5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="@string/minus" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/one"
            android:id="@+id/button7"
            android:onClick="on1Click"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="15dp"
            android:layout_above="@+id/button10"
            android:layout_alignTop="@+id/button8" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/two"
            android:id="@+id/button8"
            android:onClick="on2Click"
            android:layout_toRightOf="@+id/button7"
            android:textSize="15dp"
            android:layout_above="@+id/button10"
            android:layout_alignTop="@+id/button9" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tree"
            android:id="@+id/button9"
            android:onClick="on3Click"
            android:layout_alignLeft="@+id/button12"
            android:layout_alignStart="@+id/button12"
            android:textSize="15dp"
            android:layout_alignTop="@+id/button22"
            android:layout_above="@+id/button11" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/four"
            android:id="@+id/button10"
            android:onClick="on4Click"
            android:textSize="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button22"
            android:layout_alignBottom="@+id/button4" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/five"
            android:id="@+id/button11"
            android:onClick="on5Click"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/button10"
            android:layout_alignTop="@+id/button10"
            android:layout_alignBottom="@+id/button10" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/six"
            android:id="@+id/button12"
            android:onClick="on6Click"
            android:textSize="15dp"
            android:layout_alignLeft="@+id/button15"
            android:layout_alignStart="@+id/button15"
            android:layout_alignBottom="@+id/button11"
            android:layout_alignTop="@+id/button11" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/seven"
            android:id="@+id/button13"
            android:onClick="on7Click"
            android:textSize="15dp"
            android:layout_below="@+id/button10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eight"
            android:id="@+id/button14"
            android:onClick="on8Click"
            android:textSize="15dp"
            android:layout_alignBottom="@+id/button13"
            android:layout_toRightOf="@+id/button10" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nine"
            android:id="@+id/button15"
            android:onClick="on9Click"
            android:textSize="15dp"
            android:layout_above="@+id/button16"
            android:layout_toRightOf="@+id/button11" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:id="@+id/button16"
            android:onClick="on0Click"
            android:textSize="15dp"
            android:layout_below="@+id/button14"
            android:layout_toRightOf="@+id/button13" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button17"
            android:onClick="onUpClick"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/button21"
            android:layout_alignParentTop="true"
            android:text="@string/up" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button18"
            android:onClick="onDownClick"
            android:textSize="15dp"
            android:layout_toLeftOf="@+id/button20"
            android:layout_alignBottom="@+id/button25"
            android:text="@string/down"
            android:layout_alignTop="@+id/button24" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button19"
            android:onClick="onEnterClick"
            android:textSize="15dp"
            android:layout_below="@+id/button17"
            android:layout_toLeftOf="@+id/button20"
            android:text="@string/ok_btn" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button20"
            android:onClick="onRightClick"
            android:textSize="15dp"
            android:layout_below="@+id/button17"
            android:layout_toRightOf="@+id/button17"
