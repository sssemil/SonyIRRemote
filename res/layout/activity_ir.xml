            android:layout_below="@+id/button14"
            android:layout_toLeftOf="@+id/button15"
            android:textSize="29dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_full_up"
            android:id="@+id/button17"
            android:onClick="onUpClick"
            android:textSize="15dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/button21" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button18"
            android:background="@drawable/button_full_down"
            android:onClick="onDownClick"
            android:textSize="15dp"
            android:layout_below="@+id/button19"
            android:layout_toLeftOf="@+id/button20" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_full_set"
            android:id="@+id/button19"
