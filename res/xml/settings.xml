<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/edit_devs">
        <Preference
            android:key="addBtn"
            android:summary="@string/creates_folder_for_new_device_files"
            android:title="@string/add_new_device" />
        <Preference
            android:key="downBtn"
            android:summary="@string/ddflD"
            android:title="@string/ddfl" />
        <Preference
            android:key="rmBtn"
            android:summary="@string/rmdflD"
            android:title="@string/rmdfl" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Control">
        <ListPreference
            android:defaultValue="None"
            android:entries="@array/listUsages"
            android:entryValues="@array/listValues"
            android:key="volkey"
            android:summary="@string/vol_key_usage"
            android:title="@string/vol_key_usageD" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/updateT">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="autoUpd"
            android:summary="@string/updchD"
            android:title="@string/updch" />
        <Preference
            android:key="checkUpd"
            android:summary="@string/chfupdD"
            android:title="@string/chfupd" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/submit">
        <Preference
            android:key="sbmtDev"
            android:summary="@string/submit_new_devD"
            android:title="@string/submit_new_dev" />
        <Preference
            android:key="sbmtBug"
            android:summary="@string/submit_bugD"
            android:title="@string/submit_bug" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/theme">
        <ListPreference
            android:defaultValue="Holo"
            android:entries="@array/listThemes"
            android:entryValues="@array/listValues"
            android:key="theme"
            android:summary="@string/ch_thD"
            android:title="@string/ch_th" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/other">
        <Preference
            android:key="aboutPref"
            android:summary="@string/license1"
            android:title="@string/about" />
    </PreferenceCategory>
</PreferenceScreen>